<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/recyclerview_row_imageView"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginBottom="42dp"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerview_row_comment_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_row_useremail_text"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/recyclerview_row_useremail_text"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_marginBottom="79dp"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="useremail Text"
        app:layout_constraintBottom_toTopOf="@+id/recyclerview_row_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recyclerview_row_comment_text"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="364dp"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="comment text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_row_imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>